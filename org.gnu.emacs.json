{
    "app-id": "org.gnu.emacs-pgtk",
    "runtime" : "org.gnome.Sdk",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command": "emacs",
    "rename-icon": "emacs",
    "rename-appdata-file": "emacs.metainfo.xml",
    "rename-desktop-file": "emacs.desktop",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=pulseaudio",
	"--socket=fallback-x11",
        "--socket=wayland",
	"--socket=ssh-auth",
	"--socket=session-bus",
	"--talk-name=org.freedesktop.Notifications",
	"--talk-name=org.freedesktop.Flatpak",
	"--filesystem=home",
	"--filesystem=host",
	"--filesystem=xdg-config",
        "--filesystem=/tmp",
        "--filesystem=/var/tmp",
	"--filesystem=xdg-run/gvfs"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g"
    },
    "modules": [
	{
            "name": "jansson",
	    "buildsystem": "cmake",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/akheron/jansson/releases/download/v2.14/jansson-2.14.tar.gz",
                    "sha512": "5a592776c7ba8c0b1f5efaf813f77948bbc4bda168a72d221d176af0cf61038e26c1f30795433be10e2fc5069d5763d11852a8574774906a9f8ad261ac30109c"
                }
            ]

        },
	{
            "name": "mpfr",
	    "buildsystem": "autotools",
	    "config-opts": [
		"--enable-static",
		"--disable-shared",
		"CFLAGS=-fPIC"
	    ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/mpfr/mpfr-4.1.0.tar.xz",
                    "sha256": "0c98a3f1732ff6ca4ea690552079da9c597872d30e96ec28414ee23c95558a7f"
                }
            ],
	    "cleanup": [
		"*"
	    ]
        },
	{
            "name": "mpc",
	    "buildsystem": "autotools",
	    "config-opts": [
		"--enable-static",
		"--disable-shared",
		"CFLAGS=-fPIC"
	    ],
            "sources": [
                {
		    "type": "archive",
		    "url": "https://ftp.gnu.org/gnu/mpc/mpc-1.2.1.tar.gz",
		    "sha512": "3279f813ab37f47fdcc800e4ac5f306417d07f539593ca715876e43e04896e1d5bceccfb288ef2908a3f24b760747d0dbd0392a24b9b341bc3e12082e5c836ee"
                }
            ],
	    "cleanup": [
		"*"
	    ]

        },
	{
            "name": "gmp",
	    "buildsystem": "autotools",
	    "config-opts": [
		"--enable-static",
		"--disable-shared",
		"CFLAGS=-fPIC"
	    ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ftp.gnu.org/gnu/gmp/gmp-6.2.0.tar.xz",
                    "sha256": "258e6cd51b3fbdfc185c716d55f82c08aff57df0c6fbd143cf6ed561267a1526"
                }
            ],
	    "cleanup": [
		"*"
	    ]

        },
	{
            "name": "libgccjit",
	    "buildsystem": "autotools",
	    "config-opts": [
		"--with-linker-hash-style=gnu",
		"--enable-checking=release",
		"--enable-host-shared",
		"--enable-languages=jit",
		"--enable-static",
		"--disable-bootstrap",
		"--disable-gcov",
		"--disable-libada",
		"--disable-libgomp",
		"--disable-liboffloadmic",
		"--disable-libquadmath",
		"--disable-libquadmath-support",
		"--disable-libsanitizer",
		"--disable-libssp",
		"--disable-libstdcxx",
		"--disable-libvtv",
		"--disable-lto",
		"--disable-multilib",
		"--disable-shared"
	    ],
            "sources": [
                {
                    "type": "git",
                    "url": "git://gcc.gnu.org/git/gcc.git",
		    "tag": "releases/gcc-12.1.0"
                }
            ],
	    "cleanup": [
		"/include",
		"/lib/debug",
		"/share",
		"/libexec",
		"*.la"
	    ]
        },
        {
            "name": "emacs",
            "buildsystem": "autotools",
	    "build-options" : {
		"env": {
		    "CC": "/usr/bin/gcc",
		    "NATIVE_FULL_AOT": "0"
		}
	    },
            "config-opts": [
                "--with-gnutls",
		"--with-native-compilation",
		"--with-modules",
		"--with-json",
		"--with-pgtk",
		"--with-zlib"
            ],
            "sources": [
                {
		    "type": "git",
                    "url": "https://github.com/emacs-mirror/emacs.git"
                },
                {
                    "type": "patch",
                    "path": "appdata-launchable.patch"
                },
                {
                    "type": "patch",
                    "path": "appdata-id.patch"
                },
	        {
                    "type": "patch",
                    "path": "desktop-rename.patch"
                }
            ],
            "cleanup": [
		"/share/icons/hicolor/scalable/apps/emacs.ico",
                "/share/icons/hicolor/scalable/mimetypes/emacs-document.svg",
                "/share/icons/hicolor/scalable/mimetypes/emacs-document23.svg"
            ]
        },
        {
            "name": "podman-wrapper",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm 755 podman-wrapper /app/bin/podman"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "podman-wrapper"
                }
            ]
        }
    ],
    "cleanup": [
	"/share/doc",
	"/include",
	"/lib/cmake",
	"/lib/pkgconfig"
    ]

}
 
